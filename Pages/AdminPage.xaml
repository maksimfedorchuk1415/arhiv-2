<Page x:Class="Arhiv.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Arhiv.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <DataGrid IsReadOnly="True" AutoGenerateColumns="False" x:Name="DGridZayavka" Margin="0,36,0,0" MouseDoubleClick="DGridZayavka_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding users.fsp}"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding type}"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding status}"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding date}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Width="100" Height="30" Content="Выйти" x:Name="BtnOut" Click="BtnOut_Click" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,20,0"/>
    </Grid>
</Page>
